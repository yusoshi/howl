%header{class: 'main-header'}
  .main-header__title
    %h1{class: 'main-header__title__howl'}Howl
  .main-header__search
    %p{class: 'main-header__search__box'}検索窓
  %ul{class: 'main-header__lists'}
  -if user_signed_in? then
    %li{class: 'main-header__lists__list'}
      = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'main-header__lists__list__logout link'
    %li{class: 'main-header__lists__list'}
      = link_to 'マイページ', '#', class: 'main-header__lists__list__mypage link'
    %li{class: 'main-header__lists__list'}
      = link_to '投稿する', '#', class: 'main-header__lists__list__post link'
  -else
    %li{class: 'main-header__lists__list'}
      = link_to 'アカウント作成', new_user_registration_path, class: 'main-header__lists__list__sign-up link'
    %li{class: 'main-header__lists__list'}
      = link_to 'ログイン', new_user_session_path, class: 'main-header__lists__list__login link normal-link'
